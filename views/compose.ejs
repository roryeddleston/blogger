<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label for="postContent" class="form-label">Post</label>
        <textarea class="form-control mb-5"  rows="5" name="postContent"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


